<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.4">

    <display-name>SocketHandler</display-name>
    <description>Awesome :)</description>

    <handler>
        <description><![CDATA[Handler to handle the socket]]></description>
        <display-name>SocketHandler</display-name>
        <handler-name>SocketHandler</handler-name>
        <handler-class>\Webster\ShopBackend\Handler\SocketHandler</handler-class>
    </handler>

    <handler-mapping>
        <handler-name>SocketHandler</handler-name>
        <url-pattern>/socket</url-pattern>
    </handler-mapping>

    <context-param>
        <param-name>configFile</param-name>
        <param-value>WEB-INF/var/config.json</param-value>
    </context-param>

</web-app>